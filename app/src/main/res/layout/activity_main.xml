<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.kolokwium.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        android:layout_marginTop="16dp"
        android:textSize="22dp"
        android:textColor="@color/accentColor"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:text="Aby zlozyc zamowienie wpisz numer stolika oraz wyboerz pozycje z listy"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Podaj numer stolika"
        android:textColor="@color/primaryDark"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz danie"
        android:textColor="@android:color/white"
        android:layout_marginTop="180dp"
        android:background="@color/primaryDark"/>

</LinearLayout>
